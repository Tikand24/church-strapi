{
  "kind": "collectionType",
  "collectionName": "contact_requests",
  "info": {
    "singularName": "contact-request",
    "pluralName": "contact-requests",
    "displayName": "Contact Request"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "subject": {
      "type": "enumeration",
      "required": true,
      "default": "otros",
      "enum": [
        "intencion",
        "sacramentos",
        "voluntariado",
        "otros"
      ]
    },
    "message": {
      "type": "richtext",
      "required": true
    }
  }
}
