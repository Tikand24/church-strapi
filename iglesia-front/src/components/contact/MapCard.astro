---
import type { MapCardProps } from '../../types';

interface Props extends MapCardProps {}

const { title, embedUrl, address, directionsLink } = Astro.props;
---

<article class="bg-white rounded-3xl shadow-lg overflow-hidden">
  <div class="aspect-[4/3] sm:aspect-[5/3]">
    <iframe
      title={title}
      src={embedUrl}
      width="100%"
      height="100%"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full h-full border-0"
      allowfullscreen
    ></iframe>
  </div>
  <div class="p-6 flex flex-col gap-4">
    <div>
      <h2 class="text-xl font-semibold text-primary">{title}</h2>
      <p class="text-primary-text">{address}</p>
    </div>
    <a
      class="inline-flex items-center justify-center gap-2 rounded-full bg-primary text-white px-6 py-3 text-sm font-semibold hover:bg-primary/90 transition"
      href={directionsLink.link}
      target={directionsLink.redirectOutside ? '_blank' : '_self'}
      rel={directionsLink.redirectOutside ? 'noopener' : undefined}
    >
      {directionsLink.iconSvg && (
        <span class="h-5 w-5" set:html={directionsLink.iconSvg} />
      )}
      {directionsLink.text}
    </a>
  </div>
</article>
