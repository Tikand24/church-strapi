---
import { Image } from 'astro:assets';
import { formateador } from '../lib/utils.ts';
import type { PublicAtentionProps } from '../types';

interface Props extends PublicAtentionProps {}
const STRAPI_URL = import.meta.env.STRAPI_URL || 'http://localhost:1337';

const { title, Subtitle, description, image, enlace, ScheduleRangeItem } =
  Astro.props;

let imageData: { url: string; alternativeText: string } | null = null;
if (image && image.length > 0) {
  const img = image[0];
  imageData = {
    url: img.url.startsWith('http') ? img.url : `${STRAPI_URL}${img.url}`,
    alternativeText: img.alternativeText || '',
  };
}
---

<section class="max-w-7xl mx-auto w-full px-4 md:px-20 lg:px-40 py-8 sm:py-10 md:py-12">
  <div class="flex flex-col lg:flex-row justify-between gap-8 md:gap-10 lg:gap-12">
    <div class="flex flex-col gap-3 sm:gap-4 flex-1">
      <h6
        class="w-fit text-xs sm:text-sm font-bold mb-2 sm:mb-4 md:mb-6 tracking-widest bg-accent-gold/20 text-accent-gold py-1.5 px-3 sm:px-4 rounded-md uppercase"
      >
        {title}
      </h6>
      <h4 class="text-2xl sm:text-3xl md:text-4xl font-bold">{Subtitle}</h4>
      <p class="text-sm sm:text-base text-primary-text">
        {description}
      </p>
      {
        ScheduleRangeItem &&
          ScheduleRangeItem.map((item) => (
            <div>
              <div class="flex gap-3 sm:gap-4 items-start sm:items-center mt-3 sm:mt-4">
                <div class="bg-white rounded-lg p-1.5 sm:p-2 flex-shrink-0" set:html={item.icon} />
                <div class="flex flex-col gap-1">
                  <h5 class="text-sm sm:text-base font-bold">{item.description}</h5>
                  <div class="flex flex-col sm:flex-row gap-1 sm:gap-2 flex-wrap">
                    {item.TimeRange && item.TimeRange.map((time) => (
                      <h6 class="text-xs sm:text-sm uppercase text-primary-text">
                        {formateador.format(
                          new Date(`1970-01-01 ${time.TimeStart}`),
                        )}{' '}
                        -{' '}
                        {formateador.format(
                          new Date(`1970-01-01 ${time.TimeEnd}`),
                        )}
                      </h6>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
      }
      {
        enlace && (
          <a
            href={enlace?.link ?? '#'}
            class="mt-4 sm:mt-6 flex w-full sm:w-fit cursor-pointer items-center justify-center rounded-lg h-10 sm:h-11 md:h-12 px-4 sm:px-5 md:px-6 bg-primary text-white text-xs sm:text-sm md:text-base font-bold shadow-md hover:bg-primary/90 hover:scale-105 md:hover:scale-110 transition-all active:scale-95"
          >
            <span class="truncate">{enlace.text}</span>
          </a>
        )
      }
    </div>
    <div class="w-full lg:w-1/2 lg:max-w-[50%] flex-shrink-0">
      {
        imageData && (
          <Image
            src={imageData.url}
            alt={imageData.alternativeText}
            width={800}
            height={600}
            class="border-2 sm:border-4 w-full h-auto max-h-[300px] sm:max-h-[400px] lg:max-h-[500px] border-white rounded-xl sm:rounded-2xl object-cover shadow-lg"
          />
        )
      }
    </div>
  </div>
</section>
