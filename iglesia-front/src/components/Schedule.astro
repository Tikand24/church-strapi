---
import { formateador } from '../lib/utils.ts';
import type { ScheduleProps } from '../types';
interface Props extends ScheduleProps {}
const { Title, description,ScheduleTab } = Astro.props;

---

<section class="max-w-7xl mx-auto w-full px-4 md:px-20 lg:px-40 py-8 sm:py-10 md:py-12">
  <div class="flex flex-col justify-center">
    <div class="flex gap-3 sm:gap-4 items-center">
      <svg
        viewBox="0 0 24 24"
        class="size-5 sm:size-6 flex-shrink-0"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
          <path
            d="M12 7V12L14.5 13.5M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
            stroke="#1142d4"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </g></svg
      >
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold tracking-tight">
        {Title}
      </h2>
    </div>
    <h5 class="text-sm sm:text-base text-primary-text mt-3 sm:mt-4"
      >{description}</h5
    >

    <!-- Tabs Navigation -->
    <div class="relative my-6">
      <div class="overflow-x-auto scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0">
        <ul class="flex border-b border-gray-200 min-w-max md:min-w-0" role="tablist">
          {
            ScheduleTab &&
            ScheduleTab.map((tab, index) => (
              <li class="flex-shrink-0">
                <button
                  class={`tab-button uppercase cursor-pointer inline-block py-2.5 sm:py-3 px-3 sm:px-4 md:px-6 font-semibold text-xs sm:text-sm md:text-base whitespace-nowrap ${
                    index === 0
                      ? 'text-primary border-b-2 border-primary'
                      : 'text-primary-text hover:text-primary border-b-2 border-transparent'
                  } focus:outline-none transition-colors duration-200`}
                  data-tab={`tab${index + 1}`}
                  role="tab"
                  aria-selected={index === 0 ? 'true' : 'false'}
                  aria-controls={`tab${index + 1}-content`}
                >
                  {tab.Title}
                </button>
              </li>
            ))
          }
        </ul>
      </div>
      <!-- Scroll hint indicator (optional) -->
      <div class="absolute right-0 top-0 bottom-0 w-8 bg-gradient-to-l from-background-light to-transparent pointer-events-none md:hidden" id="scroll-hint"></div>
    </div>

    <!-- Tabs Content -->
    <div class="tab-content">
       {
        ScheduleTab && ScheduleTab.map((tab, index) => (
          <div
            id={`tab${index + 1}-content`}
            class={`tab-pane ${index === 0 ? '' : 'hidden'}`}
            role="tabpanel"
          >
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 sm:gap-4">
              {
                tab.Item && tab.Item.map((item) => (
                  <div
                    class="bg-white rounded-lg border text-primary hover:text-accent-gold transition-all duration-100 border-primary/20 p-4 sm:p-5 md:p-6 gap-1 flex flex-col hover:border-accent-gold hover:shadow-md"
                  >
                    <div set:html={item.icon} class="stroke-current w-6 h-6 sm:w-7 sm:h-7"></div>
                    <h5 class="text-base sm:text-lg text-black font-bold uppercase mt-1">
                      {formateador.format(new Date(`1970-01-01 ${item.time}`))}
                    </h5>
                    <h6 class="text-xs sm:text-sm text-primary-text">
                      {item.description}
                    </h6>
                  </div>
                ))
              }
            </div>
          </div>
        ))
       }
    </div>
  </div>
</section>

<script>
  // Get all tab buttons and tab panes
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabPanes = document.querySelectorAll('.tab-pane');
  const scrollHint = document.getElementById('scroll-hint');
  const tabsContainer = document.querySelector('.overflow-x-auto');

  // Function to check if tabs are scrollable and hide/show scroll hint
  function updateScrollHint() {
    if (tabsContainer && scrollHint) {
      const isScrollable = tabsContainer.scrollWidth > tabsContainer.clientWidth;
      const isScrolledToEnd = tabsContainer.scrollLeft + tabsContainer.clientWidth >= tabsContainer.scrollWidth - 5;
      
      if (isScrollable && !isScrolledToEnd) {
        scrollHint.style.opacity = '1';
      } else {
        scrollHint.style.opacity = '0';
      }
    }
  }

  // Function to switch tabs
  function switchTab(tabId: string) {
    // Hide all tab panes
    tabPanes.forEach((pane) => {
      pane.classList.add('hidden');
    });

    // Remove active styles from all buttons
    tabButtons.forEach((button) => {
      button.classList.remove('text-primary', 'border-primary');
      button.classList.add('text-primary-text', 'border-transparent');
      button.setAttribute('aria-selected', 'false');
    });

    // Show selected tab pane
    const selectedPane = document.getElementById(`${tabId}-content`);
    if (selectedPane) {
      selectedPane.classList.remove('hidden');
    }

    // Add active styles to clicked button
    const selectedButton = document.querySelector(`[data-tab="${tabId}"]`);
    if (selectedButton) {
      selectedButton.classList.remove(
        'text-primary-text',
        'border-transparent',
      );
      selectedButton.classList.add('text-primary', 'border-primary');
      selectedButton.setAttribute('aria-selected', 'true');
      
      // Scroll the selected tab into view
      selectedButton.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
    }
  }

  // Add click event listeners to all tab buttons
  tabButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');
      if (tabId) {
        switchTab(tabId);
      }
    });
  });

  // Update scroll hint on scroll and resize
  if (tabsContainer && scrollHint) {
    tabsContainer.addEventListener('scroll', updateScrollHint);
    window.addEventListener('resize', updateScrollHint);
    
    // Initial check
    updateScrollHint();
  }
</script>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .scrollbar-hide {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }

  /* Smooth scroll behavior */
  .overflow-x-auto {
    scroll-behavior: smooth;
  }
</style>
